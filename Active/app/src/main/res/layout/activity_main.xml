<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65A6D7"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/offscreen_logo"
        android:layout_width="258dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clocknotes_logo" />

    <Button
        android:id="@+id/offscreen_toggle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="115dp"
        android:layout_height="97dp"
        android:background="@drawable/off_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offscreen_logo" />

    <ImageView
        android:id="@+id/offscreen_text"
        android:layout_width="358dp"
        android:layout_height="165dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offscreen_toggle"
        app:srcCompat="@drawable/text_off" />

</androidx.constraintlayout.widget.ConstraintLayout>